  "Resources" : {
    "MyVPC" : {
        "Type" : "AWS::EC2::VPC",
        "Properties" : {
         "CidrBlock" : { "Ref" : "VPCCidrBlock" },
         "EnableDnsSupport" : "true",
         "EnableDnsHostnames" : "true",
         "InstanceTenancy" : "default"
     }
    },
    "MyIGW" : {
        "Type" : "AWS::EC2::InternetGateway"
    },
    "AttachGateway" : {
       "Type" : "AWS::EC2::VPCGatewayAttachment",
       "Properties" : {
         "VpcId" : { "Ref" : "MyVPC" },
         "InternetGatewayId" : { "Ref" : "MyIGW" }
       }
    },
    "MyPublicSubnetA" : {
        "Type" : "AWS::EC2::Subnet",
        "Properties" : {
           "AvailabilityZone" : "ap-northeast-1a",
           "VpcId" : { "Ref" : "MyVPC" },
           "CidrBlock" : { "Ref" : "PublicSubnetACidrBlock" }
        }
    },
    "MyPublicSubnetC" : {
        "Type" : "AWS::EC2::Subnet",
        "Properties" : {
           "AvailabilityZone" : "ap-northeast-1c",
           "VpcId" : { "Ref" : "MyVPC" },
           "CidrBlock" : { "Ref" : "PublicSubnetCCidrBlock" }
        }
    },
    "MyPublicSubnetD" : {
        "Type" : "AWS::EC2::Subnet",
        "Properties" : {
           "AvailabilityZone" : "ap-northeast-1d",
           "VpcId" : { "Ref" : "MyVPC" },
           "CidrBlock" : { "Ref" : "PublicSubnetDCidrBlock" }
        }
    },
    "MyRouteTable" : {
        "Type" : "AWS::EC2::RouteTable",
        "Properties" : {
           "VpcId" : { "Ref" : "MyVPC" }
         }
    },
    "SubnetAttacheA" : {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties" : {
         "RouteTableId" : { "Ref" : "MyRouteTable" },
         "SubnetId" : { "Ref" : "MyPublicSubnetA" }
      }
    },
    "SubnetAttacheC" : {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties" : {
         "RouteTableId" : { "Ref" : "MyRouteTable" },
         "SubnetId" : { "Ref" : "MyPublicSubnetC" }
      }
    },
    "SubnetAttacheD" : {
      "Type" : "AWS::EC2::SubnetRouteTableAssociation",
      "Properties" : {
         "RouteTableId" : { "Ref" : "MyRouteTable" },
         "SubnetId" : { "Ref" : "MyPublicSubnetD" }
      }
    },
    "MyRoute" : {
        "Type" : "AWS::EC2::Route",
        "Properties" : {
           "RouteTableId" : { "Ref" : "MyRouteTable" },
           "DestinationCidrBlock" : "0.0.0.0/0",
           "GatewayId" : { "Ref" : "MyIGW" }
         }
    },
    "EC2Instance" : {
      "Type" : "AWS::EC2::Instance",
      "Properties" : {
        "InstanceType" : { "Ref" : "InstanceType" },
        "NetworkInterfaces" : [ {
          "GroupSet" :  [{ "Ref" : "InstanceSecurityGroup" } ],
          "AssociatePublicIpAddress" : "false",
          "DeviceIndex" : "0",
          "SubnetId" : { "Ref" : "MyPublicSubnetA" }  } ],
        "BlockDeviceMappings": [{
              "DeviceName"  : "/dev/xvda",
              "Ebs"  :  {
                "VolumeType"  :  "gp2",
                "VolumeSize"  :  { "Ref" : "EC2EBSVolume" },
                "DeleteOnTermination": true
              }
        }],
        "KeyName" : { "Ref" : "SSHKeyName" },
        "ImageId" : { "Fn::FindInMap" : [ "AWSRegionArch2AMI", { "Ref" : "AWS::Region" },
                          { "Fn::FindInMap" : [ "AWSInstanceType2Arch", { "Ref" : "InstanceType" }, "Arch" ] } ] }
      }
    },
    "IPAddress" : {
      "Type" : "AWS::EC2::EIP"
    },
    "IPAssoc" : {
      "Type" : "AWS::EC2::EIPAssociation",
      "Properties" : {
        "InstanceId" : { "Ref" : "EC2Instance" },
        "EIP" : { "Ref" : "IPAddress" }
      }
    },
    "InstanceSecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : { "Ref" : "DevServerSecurityGroupDescription"},
        "VpcId" : { "Ref" : "MyVPC" },
        "SecurityGroupIngress" : [ {
          "IpProtocol" : "tcp",
          "FromPort" : "22",
          "ToPort" : "22",
          "CidrIp" : { "Ref" : "SSHLocation"}
        },
        {
          "IpProtocol" : "tcp",
          "FromPort" : "80",
          "ToPort" : "80",
          "CidrIp" : { "Ref" : "WebLocation"}
        },
        {
          "IpProtocol" : "tcp",
          "FromPort" : "443",
          "ToPort" : "443",
          "CidrIp" : { "Ref" : "WebLocation"}
        } ]
      }
    }
  },

  "Outputs" : {
    "InstanceId" : {
      "Description" : "InstanceId of the newly created EC2 instance",
      "Value" : { "Ref" : "EC2Instance" }
    },
    "AZ" : {
      "Description" : "Availability Zone of the newly created EC2 instance",
      "Value" : { "Fn::GetAtt" : [ "EC2Instance", "AvailabilityZone" ] }
    },
    "EIP" : {
      "Description" : "Elastic IP address of the newly created EC2 instance",
      "Value" : { "Ref" : "IPAddress" }
    }
  }
}
